%h1 Listing photos
%table
  %tr
    %th Lesson
    %th Title
    %th Caption
    %th
    %th
    %th
  - @photos.each do |photo|
    %tr
      %td= photo.lesson_id
      %td= photo.title
      %td= photo.caption
      %td= link_to 'Show', lesson_photo_path(@lesson, photo)
      %td= link_to 'Edit', edit_lesson_photo_path(@lesson, photo)
      %td= link_to 'Destroy', lesson_photo_path(@lesson, photo), confirm: 'Are you sure?', method: :delete
%br/
= link_to 'New Photo', new_lesson_photo_path(@lesson)
