= form_for(@resource) do |f|
  - if @resource.errors.any?
    #error_explanation
      %h2
        = pluralize(@resource.errors.count, "error")
        prohibited this resource from being saved:
      %ul
        - @resource.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .field
    = f.label :comments
    %br/
    = f.text_area :comments
  .actions
    = f.submit
